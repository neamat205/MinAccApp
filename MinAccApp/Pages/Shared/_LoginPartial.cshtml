@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center me-3">
            <i class="bi bi-person-circle fs-5 me-1 text-primary"></i>
            <a class="nav-link text-dark p-0" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="btn btn-link nav-link text-dark p-0 d-flex align-items-center">
                    <i class="bi bi-box-arrow-right fs-5 me-1"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item me-3">
            <a class="nav-link text-dark d-flex align-items-center" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus fs-5 me-1"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark d-flex align-items-center" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right fs-5 me-1"></i> Login
            </a>
        </li>
    }
</ul>

