@{
    var path = Context.Request.Path.ToString().ToLower();
    string IsActive(string urlPath) => path == urlPath.ToLower() ? "active" : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MinAccApp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MinAccApp.styles.css" asp-append-version="true" />


    <style>
  
        html, body {
            height: 100%;
            margin: 0;
            overflow-x: hidden;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
        }

      
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            padding: 1.5rem 1rem;
            background: linear-gradient(145deg, #1e2a38, #334e68);
            overflow-y: auto;
            transition: transform 0.3s ease-in-out;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.15);
            z-index: 1030;
            border-right: 1px solid rgba(255, 255, 255, 0.05);
        }

            .sidebar .navbar-brand {
                font-size: 1.9rem;
                font-weight: 800;
                color: #fff !important;
                text-align: center;
                display: block;
                margin-bottom: 2rem;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
            }

      
            .sidebar .nav-link,
            .sidebar .nav-link:visited {
                display: inline-block;
                background-color: #3a5676;
                color: #fff !important;
                padding: 0.5rem 1rem;
                margin: 0.25rem 0;
                font-size: 0.95rem;
                border: none;
                border-radius: 6px;
                text-decoration: none;
                transition: background-color 0.25s ease;
                user-select: none;
                width: 100%;
                box-sizing: border-box;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link:focus,
                .sidebar .nav-link.active {
                    background-color: #4e6b8e;
                    color: #fff !important;
                    font-weight: 600;
                    text-decoration: none;
                    outline: none;
                    box-shadow: 0 0 8px rgba(78, 107, 142, 0.7);
                }

                .sidebar .nav-link i {
                    color: #ffd966;
                    font-size: 1.2rem;
                    margin-right: 0.75rem;
                    transition: color 0.3s ease;
                }

                .sidebar .nav-link:hover i,
                .sidebar .nav-link.active i {
                    color: #ffcf00;
                }

       
        .auth-section {
            margin-top: 2rem;
            padding-top: 1.2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.12);
            text-align: center;
            color: #ccc;
        }

            .auth-section a,
            .auth-section button {
                display: inline-block;
                background-color: #3a5676;
                color: #fff !important;
                padding: 0.5rem 1rem;
                margin: 0.25rem 0;
                font-size: 0.95rem;
                border: none;
                border-radius: 6px;
                text-decoration: none;
                transition: background-color 0.25s ease;
                width: 100%;
                box-sizing: border-box;
                user-select: none;
            }

                .auth-section a:hover,
                .auth-section button:hover {
                    background-color: #4e6b8e;
                }

     
        .sidebar-toggle-btn {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1100;
            background: #1e2a38;
            color: white;
            border: none;
            padding: 0.5rem 0.75rem;
            border-radius: 0.4rem;
        }

            .sidebar-toggle-btn i {
                font-size: 1.5rem;
            }

       
        .content {
            margin-left: 250px;
            padding: 2rem;
            min-height: 100vh;
            background-color: #f8f9fa;
            transition: margin-left 0.3s ease-in-out;
        }

        
        .footer {
            background-color: #ffffff;
            color: #888;
            padding: 1rem 0;
            text-align: center;
            font-size: 0.9rem;
            border-top: 1px solid #e5e5e5;
        }

    
        @@media (max-width: 991.98px) {
            .sidebar {
                transform: translateX(-100%);
                width: 220px;
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .content {
                margin-left: 0;
                padding: 1rem;
            }

            .sidebar-toggle-btn {
                display: inline-block;
            }
        }
       
        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <button class="sidebar-toggle-btn" id="sidebarToggle" aria-label="Toggle sidebar">
        <i class="bi bi-list"></i>
    </button>

    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="nav-brand px-2 py-2">
            <svg width="220"
                 height="60"
                 viewBox="0 0 220 60"
                 xmlns="http://www.w3.org/2000/svg"
                 role="img"
                 aria-label="Qtec Solution Limited Logo">
                <!-- Icon: stylized "Q" -->
                <circle cx="30" cy="30" r="25" stroke="#ffcf00" stroke-width="4" fill="none" />
                <line x1="40" y1="40" x2="55" y2="55" stroke="#ffcf00" stroke-width="4" stroke-linecap="round" />
                <circle cx="30" cy="30" r="12" fill="#ffcf00" />

                <!-- Company Name - brighter colors -->
                <text x="80"
                      y="38"
                      fill="#fff176"
                      font-family="'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
                      font-weight="700"
                      font-size="26"
                      letter-spacing="1">
                    Qtec
                </text>
                <text x="80"
                      y="58"
                      fill="#ffd54f"
                      font-family="'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
                      font-weight="500"
                      font-size="14">
                    Solution Limited
                </text>
            </svg>




        </div>
       
        <ul class="nav flex-column sidebar-nav">
            <li>
                <a class="nav-link @IsActive("/index")" asp-page="/Index">
                    <i class="bi bi-house-door"></i> Home
                </a>
            </li>
            <li>
                <a class="nav-link @IsActive("/chartofaccount")" asp-page="/ChartOfAccount/Index">
                    <i class="bi bi-journal-text"></i> Chart of Accounts
                </a>
            </li>
            <li>
                <a class="nav-link @IsActive("/voucher/index")" asp-page="/Voucher/Index">
                    <i class="bi bi-list-ul"></i> Voucher List
                </a>
            </li>
            <li>
                <a class="nav-link @IsActive("/voucher/create")" asp-page="/Voucher/Create">
                    <i class="bi bi-plus-circle"></i> Add Voucher
                </a>
            </li>
            <li>
                <a class="nav-link @IsActive("/user/index")" asp-page="/User/Index">
                    <i class="bi bi-people"></i> User List
                </a>
            </li>
            <li>
                <a class="nav-link @IsActive("/user/manage")" asp-page="/User/Manage">
                    <i class="bi bi-gear"></i> Manage Users
                </a>
            </li>
        </ul>


        <div class="auth-section px-2">
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <!-- Main Content -->
    <main class="content">
        @RenderBody()
    </main>

    <!-- Footer -->
    @* <footer class="footer text-center bg-white border-top shadow-sm">
        <div class="container">
            &copy; 2025 - <strong>MinAccApp</strong> - <a asp-page="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer> *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('sidebarToggle');
        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('show');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
