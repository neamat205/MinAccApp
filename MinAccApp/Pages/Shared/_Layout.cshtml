@{
    var path = Context.Request.Path.ToString().ToLower();

    string IsActive(string urlPath)
    {
        return path == urlPath.ToLower() ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MinAccApp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MinAccApp.styles.css" asp-append-version="true" />

    <style>
        /* Navbar customizations */
        header {
            height: 90px;
        }

        nav.navbar {
            height: 100%;
            background: linear-gradient(135deg, #334e68, #243b55);
        }

            nav.navbar .navbar-brand {
                font-size: 1.75rem; /* bigger text */
                color: #f0f4f8 !important;
                font-weight: 700;
                letter-spacing: 1.2px;
            }

            nav.navbar .nav-link {
                font-size: 1.1rem;
                color: #cfd8e3 !important;
                padding-top: 1.25rem;
                padding-bottom: 1.25rem;
                display: flex;
                align-items: center;
                gap: 6px;
                transition: color 0.3s ease;
            }

                nav.navbar .nav-link:hover,
                nav.navbar .nav-item.active .nav-link {
                    color: #ffd966 !important; /* golden highlight */
                }

                nav.navbar .nav-link i {
                    font-size: 1.5rem; /* larger icon */
                    vertical-align: middle;
                }
        /* Navbar toggler color */
        .navbar-light .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28255, 255, 255, 0.7%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }
        /* Adjust the container padding */
        .container-fluid.px-5 {
            padding-left: 2rem !important;
            padding-right: 2rem !important;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm border-bottom">
            <div class="container-fluid px-5">
                <a class="navbar-brand fw-bold" asp-page="Index">MinAccApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ml-5 d-flex">
                        <li class="nav-item @IsActive("/")">
                            <a class="nav-link" asp-page="/Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>

                        <li class="nav-item @IsActive("/ChartOfAccount")">
                            <a class="nav-link" asp-page="/ChartOfAccount/Index">
                                <i class="bi bi-journal-text"></i> Manage Chart Of Account
                            </a>
                        </li>

                        <li class="nav-item @IsActive("/Voucher/Index")">
                            <a class="nav-link" asp-page="/Voucher/Index">
                                <i class="bi bi-list-ul"></i> Voucher List
                            </a>
                        </li>

                        <li class="nav-item @IsActive("/Voucher/Ceate")">
                            <a class="nav-link" asp-page="/Voucher/Create">
                                <i class="bi bi-plus-circle"></i> Add Voucher
                            </a>
                        </li>

                        <li class="nav-item @IsActive("/User/Index")">
                            <a class="nav-link" asp-page="/User/Index">
                                <i class="bi bi-people"></i> User List
                            </a>
                        </li>

                        <li class="nav-item @IsActive("/User/Manage")">
                            <a class="nav-link" asp-page="/User/Manage">
                                <i class="bi bi-gear"></i> Manage Users
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex me-5">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container  py-4">
        @RenderBody()
    </main>

    <footer class="footer bg-white text-muted border-top py-3 mt-auto shadow-sm">
        <div class="container text-center small">
            &copy; 2025 - <strong>MinAccApp</strong> -
            <a asp-page="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
