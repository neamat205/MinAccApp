@page
@model MinAccApp.Pages.User.IndexModel
@{
    ViewData["Title"] = "User List";
}


    <div class="card shadow-lg w-75">
        <div class="card-header bg-gradient p-3 text-white fs-4 fw-bold" style="background: linear-gradient(90deg, #4b6cb7, #182848);">
            User List
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <tr class="text-center">
                                <td>@user.UserId</td>
                                <td class="text-start">@user.UserName</td>
                                <td class="text-start">@user.Email</td>
                                <td>@user.RoleName</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 fst-italic text-muted">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

